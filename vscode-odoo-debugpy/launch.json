    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo: Run And Debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 8888,
            },
            "pathMappings": [
                {
